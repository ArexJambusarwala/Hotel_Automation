<!doctype html>
<html lang="en">
  <head>
    <%-include('partials/headcontent.ejs')%>
    <link rel="stylesheet" type="text/css" href="css/register.css" />
    <title>Sign Up</title>
  </head>
  <body>
    <%-include('partials/header.ejs')%>
    <br><br>
    <%if(typeof errors!=='undefined' && errors.message){%>
          <h1><%=errors.message%></h1>
    <%}%>

    <%if(typeof errors!=='undefined' && errors.other){%>
      <h1><%=errors.other%></h1>
    <%}%>
    <div class="container">
      <div class="row">
        <div class="col-xs-0 col-sm-2 col-md-3 col-lg-4">
          <span>&nbsp</span>
        </div>
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 form-wrapper">
          <h2 style="text-align: center;">Register to book</h2>
          <form method="post" action="/sign-up" novalidate>
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" class="form-control" name="username" value="<%=typeof username==='undefined'?'':username%>" />
              <%if(typeof errors!=='undefined' && errors.username){%>
                <h1><%=errors.username%></h1>
              <%}%>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" name="email" class="form-control" value="<%=typeof email==='undefined'?'':email%>"/> </label>  
                <%if(typeof errors!=='undefined' && errors.email){%>
                  <h1><%=errors.email%></h1>
                <%}%>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" name="password" />
              
              <%if(typeof errors!=='undefined' && errors.password){%>
                <h1><%=errors.password%></h1>
              <%}%>
            </div>
            <div class="form-group">
              <label for="publicKey">Public Key</label>
              <input type="text" id="publicKey" name="publicKey" class="form-control" value="<%=typeof publicKey==='undefined'?'':publicKey%>"/>
              <%if(typeof errors!=='undefined' && errors.publicKey){%>
                <h1><%=errors.publicKey%></h1>
              <%}%>
            </div>
            <div class="form-group">
              <label for="privateKey">Private Key</label>
              <input type="password" class="form-control" id="privateKey" name="privateKey" />
              
              <%if(typeof errors!=='undefined' && errors.privateKey){%>
                <h1><%=errors.privateKey%></h1>
              <%}%>
            </div>
            <button type="submit" class="btn btn-lg" id="submit">Sign Up</button>
          </form>
        </div>
        <div class="col-xs-0 col-sm-2 col-md-3 col-lg-4">
          <span>&nbsp</span>
        </div>
      </div>
    </div>
    <%-include('partials/footer.ejs')%>
  </body>
</html>
